<script>
    document.addEventListener("DOMContentLoaded", function () {
        const miniTab = document.createElement('div');
        miniTab.classList.add('mini-tab');
        document.body.appendChild(miniTab);

        const title = document.createElement('p');
        title.innerText = 'CURRENT LOST PETS ALERT!';
        title.style.fontWeight = 'bold';
        miniTab.appendChild(title);

        const expandButton = document.createElement('button');
        expandButton.innerHTML = 'Expand'; // Initial text
        expandButton.style.fontSize = '14px';
        expandButton.style.width = '150px';
        expandButton.style.height = '30px';
        expandButton.style.marginRight = '5px';
        expandButton.addEventListener('click', function () {
            document.body.classList.toggle('expanded');

            // Change button text based on the expanded state
            expandButton.innerHTML = document.body.classList.contains('expanded') ? 'Minimize' : 'Expand';
        });
        miniTab.appendChild(expandButton);

        if (document.body.classList.contains('pm-home')) {
            const hideButton = document.createElement('button');
            hideButton.innerHTML = '&#8722;'; // Minus symbol
            hideButton.style.fontSize = '14px';
            hideButton.style.width = '20px';
            hideButton.style.height = '20px';
            hideButton.style.marginRight = '5px';
            hideButton.addEventListener('click', function () {
                document.body.classList.toggle('expanded');
                expandButton.innerHTML = 'Expand'; // Reset text when hiding
            });
            miniTab.appendChild(hideButton);
        }
    });
</script>

