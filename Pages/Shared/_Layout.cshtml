<body>
    <header>
        <div id="headerbox" style=" background-color: #8b572a; text-align:right; width:100%; padding: 10px; color: #fff;">

            <h1 style="text-align:center;">Pet Reunion Hub</h1>
            <h2 style="text-align:center;">
                    Aid and Grief Support for Missing or Departed Pets
                </h2>
            @if (User.Identity.IsAuthenticated)
            {
                <span><b>Current User:</b> @User.Identity.Name</span>
            }

         </div>
       
        
    </header>


    @{
        if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar-toggle" onclick="toggleSidebar()">
                <div class="bar" style="background-color: white; height: 4px;"></div>
                <div class="bar" style="background-color: white; height: 4px;"></div>
                <div class="bar" style="background-color: white; height: 4px;"></div>
            </div>

            <div class="sidebar">
                <button style="color:white; background-color:#8b572a;" onclick="window.location.href='/LOSTPETREPORTING/GENERAL/Index'">Set or Change Residential Area</button>
                <button style="color:white; background-color:darkred" onclick="window.location.href='/LOSTPETREPORTING/NEW/CityReports'">Lost Pets In Your City</button>
                <button style="color:white; background-color:darkblue" onclick="window.location.href='/LOSTPETREPORTING/NEW/StateReports'">Lost Pets In Your State</button>
                <button style="color:white" onclick="window.location.href='/LOSTPETREPORTING/NEW/CountryReports'">Lost Pets In Your Country</button>
                <button style="color:white; background-color:#333;" onclick="window.location.href='/NEWNOTIFICATION'">Notifications</button>
                <button style="color:white; background-color:#333;" onclick="window.location.href='/HomePage'">Main Menu</button>
                <button style="color:white; background-color:gray;" onclick="window.location.href='/LOSTPETREPORTING/LPRHome'">Lost Pets</button>
                <button style="color:white; background-color:gray;" onclick="window.location.href='/PETMEMORIAL/PMHome'">Pet Memorial</button>
                <button style="color:white; background-color:gray;" onclick="window.location.href='/COPINGRESOURCES/CRHome'">Support Hub</button>
                <button style="color:white; background-color:darkgreen;" onclick="window.location.href='/Identity/Account/Manage'">Manage Account</button>
                <button style="color:black; background-color:lightblue;" onclick="window.location.href='/ContactUs'">Contact Us</button>
                <button style="color:black; background-color:white;" onclick="window.location.href='/LOGOUTPAGE'">Log Out</button>
            </div>
        }
    }

    <div class="content-container">
        <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
     </div>
    </div>

