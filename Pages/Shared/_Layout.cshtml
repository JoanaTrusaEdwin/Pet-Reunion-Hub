            letter-spacing: 1px;
            border-bottom: 1px solid #fff;
            margin-bottom: 10px;
            color: white;
        }

        #headerbox h2 {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-style: italic;
            font-size: 1.5em; /* Adjust the font size as needed */
            color: #fff;
            margin-top: 10px;
        }

        /*NAVIGATION*/
        .sidebar-toggle {
            cursor: pointer;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 9999;
        }

        .bar {
            width: 25px;
            height: 3px;
            background-color: #333;
            margin: 5px 0;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0; /* Adjusted to display sidebar on the left */
            width: 250px;
            height: 100%;
            /* background-color: #f0f0f0; */
            background-color: black;
            transition: transform 0.3s ease; /* Changed transition property */
            z-index: 9998;
            padding-top: 60px; /* Adjust according to your header height */
            transform: translateX(-100%); /* Initially hidden */
        }

        .black-header {
            background-color: black;
            height: 25px; /* Adjusted height */
            width: 100%;
        }
           

            .sidebar.active {
                transform: translateX(0); /* Show sidebar */
            }

        .content-container {
            /* Adjust to make space for the sidebar */
            transition: margin-left 0.3s ease; /* Added transition for smooth effect */
        }

        .sidebar button {
            display: block;
            width: 100%;
            padding: 10px;
            text-align: left;
            border: none;
            background-color: transparent;
            border-bottom: 1px solid #ccc;
            cursor: pointer;
        }

            .sidebar button:hover {
                background-color: #ddd;
            }


