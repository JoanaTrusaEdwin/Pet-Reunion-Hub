@page
@model Pet_Reunion_Hub.Pages.PETMEMORIAL.EditMemorialModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Pet Memorial</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 8px;
        }

        .post-container {
            margin-top: 20px;
        }

        .post {
            margin-bottom: 10px;
            background-color: #fff;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        #addPostBtn {
            cursor: pointer;
            color: green;
            font-weight: bold;
            background-color: #fff;
            border: none;
        }

        button {
            background-color: #3b3b3b;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body class="pm-home">
    <div class="container">
        <h1>Create Pet Memorial</h1>
        <p> (for prototype purposes) Assuming there is data here </p>

        <form>
            <label for="petName">Pet Name</label>
            <input type="text" id="petName" name="petName">

            <label for="petType">Pet Type</label>

            <select id="petType" name="petType">
                <option value="Dog">Dog</option>
                <option value="Cat">Cat</option>
                <option value="Bird">Bird</option>
                <option value="Fish">Fish</option>
                <option value="Reptile">Reptile</option>
                <option value="Rodent">Rodent</option>
                <option value="Rabbit">Rabbit</option>
                <option value="Ferret">Ferret</option>
                <option value="Amphibian">Amphibian</option>
                <option value="Horse">Horse</option>
                <option value="SmallMammal">Small Mammal</option>
                <option value="FarmAnimal">Farm Animal</option>
                <option value="ExoticPet">Exotic Pet</option>
                <option value="Insect">Insect</option>
                <option value="Arachnid">Arachnid</option>
            </select>


            <label for="petGender">Gender</label>
            <select id="petGender" name="petGender">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="neutral">Prefer not to say</option>
            </select>

            <label for="petDOB">Date of Birth</label>
            <div>
                <input type="date" id="petDOB" name="petDOB">
                <label for="unknownDOB">Unknown</label>
                <input type="checkbox" id="unknownDOB" name="unknownDOB">
            </div>
            </br>

            <label for="petDOA">Date of Adoption</label>
            <div>
                <input type="date" id="petDOA" name="petDOA">
                <label for="unknownDOB">Unknown</label>
                <input type="checkbox" id="unknownDOA" name="unknownDOA">
            </div>
            </br>

            <label for="petDOB">Departure Date</label>
            <div>
                <input type="date" id="petDOD" name="petDOD">
                <label for="unknownDOB">Unknown</label>
                <input type="checkbox" id="unknownDOD" name="unknownDOD">
            </div>
            @* <input type="date" id="petDOB" name="petDOB"> *@
            </br>

            <label for="photo">Upload Pet Photos (Maximum 3)</label>
            <input type="file" id="photo1" name="photo1" accept="image/*">
            <input type="file" id="photo2" name="photo2" accept="image/*">
            <input type="file" id="photo3" name="photo3" accept="image/*">
            </br>

            <label for="petLocation1">Location</label>
            <input type="text" id="petLocation1" name="petLocation1">
            <br />

            <label for="tribute">Tribute Text</label>
            <textarea id="tribute" name="tribute" rows="4" cols="50"></textarea>
            </br>

            <label for="BasicVisibility1">Visibility</label>
            <select id="BasicVisibility1" name="Visibility">
                <option value="public">Public</option>
                <option value="private">Private</option>
            </select>
            </br>

            <div class="post-container">
                <h2>Posts</h2>
                <div class="post" id="post1">
                    <label for="postText1">Text</label>
                    <br />
                    <textarea id="postText1" name="postText1"></textarea>
                    <br />
                    <!-- Add other fields for image, video, songs -->

                    <label for="postVisibility1">Post Visibility</label>
                    <select id="postVisibility1" name="postVisibility1">
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                    </select>
                    <br />

                    <label for="postLocation1">Location</label>
                    <input type="text" id="postLocation1" name="postLocation1">
                    <br />

                    <label for="postAnonymous1">Anonymous</label>
                    <input type="checkbox" id="postAnonymous1" name="postAnonymous1">
                </div>

                <!-- Additional posts can be added dynamically with JavaScript -->
                <div id="addPostBtn">+ Add Post</div>
            </div>

            <a href="/PETMEMORIAL/MyMemorials">
               Create Memorial
            </a>
        </form>
    </div>

    <script>
        let postCount = 1;

        document.getElementById('addPostBtn').addEventListener('click', function () {
            postCount++;
            const originalPost = document.getElementById('post1');
            const newPost = originalPost.cloneNode(true);

            newPost.id = 'post' + postCount;

            // Clear the input values in the cloned post
            newPost.querySelectorAll('input, textarea').forEach(input => input.value = '');

            document.querySelector('.post-container').appendChild(newPost);
        });
    </script>
</body>
</html>