@page
@model Pet_Reunion_Hub.Pages.PETMEMORIAL.MyMemorialsModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>
    

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #F5F5DC; /* Light cream background */
            color: #333; /* Black text color */
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        #searchInput {
            width: 300px; /* Set the width as per your design */
            padding: 10px; /* Adjust padding for spacing inside the input */
            font-size: 18px; /* Adjust font size for better visibility */
            border-radius: 20px; /* Adjust border-radius for a rounded appearance */
            border: 2px solid #333;
        }

        .box-image {
            width: 30%; /* Set the image width to 30% of its container */
            display: block; /* Center the image */
            margin: 0 auto;
        }
        #mainMemorial{
            background-color: #D2B48C;
            margin-top: 15px;
            border-radius: 15px;
            padding: 20px;
            margin: 20px 0;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            color: black;
        }
        #posts, #editbtn {
            background-color: #fff; 
            border-radius: 15px; 
            padding: 20px;
            margin: 20px 0;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
        }

        #mainMemorial {
            border: 4px solid #654321; 
           
            text-align: center;
          
        }

        h1 {
            font-family: 'Georgia', serif; 
            color: black; 
        }

        .label {
            background-color: #654321; 
            color: #fff; 
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
            margin-top: 10px;
        }

        h3, h4{
            color: black; 
        }

        h2, h4 {
            font-family: 'Georgia', serif;
            margin-top: 15px;
        }

        .bold-text {
            font-weight: bold;
        }

        #editbtn {
            background-color: #654321; 
            color: #fff; 
            padding: 15px 20px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            font-size: 18px;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

            #editbtn:hover {
                background-color: #432; 
            }

        #posts {
            border: 4px solid #321; 
        }

        .post {
            background-color: #F5F5DC; 
            border-radius: 10px;
            padding: 10px;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <input type="text" id="searchInput" placeholder="Search">
    <div id="mainMemorial">
        <h1>Blackie</h1>
        <img class="box-image" src="/images/Blackie.jpg" alt="Pet Memorial Image">
        <h2><span class="bold-text">Type:</span> Dog</h2>
        <h2><span class="bold-text">Breed:</span> Beagle Mix</h2>
        <h2><span class="bold-text">Gender:</span> Male</h2>
        <h2><span class="bold-text">Date of Birth:</span> Unknown</h2>
        <h2><span class="bold-text">Date of Adoption:</span> 2nd June 2013</h2>
        <h2><span class="bold-text">Departure Date:</span> 27th June 2023</h2>
        <h2><span class="bold-text">Location:</span> Sibu, Sarawak</h2>
        <h4>I've loved, love, and will always love you. You've taught me how capable I am to love, and grief is the price we pay for love. To grieve for you is both an honor and a curse. An honor to have known such a strong and loyal soul like yours. A curse to miss you for the rest of my life. I love you forever my little latte cappuccino</h4>
        <p><span class="bold-text">Visibility:</span> Public</p>
    </div>

    <div id="posts">
        <h3><b>Your posts:</b></h3>

        <div class="post" id="post1">
            <h5>It has been 6 months, and I miss him terribly</h5>
            <p><span class="bold-text">Visibility:</span> Public</p>
        </div>

        <div class="post" id="post2">
            <h5>I dreamed of him this morning</h5>
            <p><span class="bold-text">Visibility:</span> Public</p>
        </div>

      
    </div>

    <a href="/PETMEMORIAL/EditMemorial" id="editbtn"><b>Edit Memorial</b></a>
</body>
</html>

<script>
    // This function can be expanded later to handle the actual search logic
    function performSearch() {
        var searchQuery = document.getElementById('searchInput').value;
        console.log('Search query:', searchQuery);
    }

    // Attach the performSearch function to the input field's "input" event
    document.getElementById('searchInput').addEventListener('input', performSearch);
</script>

