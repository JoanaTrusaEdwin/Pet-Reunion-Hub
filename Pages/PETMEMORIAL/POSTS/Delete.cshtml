@model Pet_Reunion_Hub.Pages.PETMEMORIAL.POSTS.DeleteModel

@{
    ViewData["Title"] = "Delete";
//     Layout = "~/Pages/Shared/SignUp.cshtml";
// 
}
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.RazorPages

<style>
    /* Style for Edit and Back to List buttons */

    #edit {
        border-radius: 5px;
        background-color: #8b572a;
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    #back {
        border-radius: 5px;
        background-color: black;
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #555; /* Darken the background color on hover */
    }
</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div style="border: 1px solid #ccc; padding: 30px; margin-bottom: 20px;  border-radius: 5px; background-color: #fff;">
    <h4>Post</h4>
    <hr />
    <b>Created on:</b>
    @Model.Post.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
    <br/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.IsPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.IsPublic)
        </dd>
     @*    <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.User.Id)
        </dd> *@
       @*  <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Tribute)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Tribute.UserId)
        </dd> *@
        @if (Model.Post.Media != null && Model.Post.Media.Any())
        {
            <p><strong>Media:</strong></p>
            <div class="media-container">
                @foreach (var mediaItem in Model.Post.Media)
                {
                    <img src="@mediaItem.MediaUrl" alt="Media Image" style="max-width: 200px; margin-right: 10px;">
                }
            </div>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Post.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br/>
        <br />
        <a asp-page="./Index" id="back">Back to List</a>
    </form>
</div>
