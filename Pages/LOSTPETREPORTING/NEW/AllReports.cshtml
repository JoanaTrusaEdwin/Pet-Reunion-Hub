@page
@model Pet_Reunion_Hub.Pages.LOSTPETREPORTING.NEW.AllReportsModel
@{
    ViewData["Title"] = "All Reports";
}

<h1>Reports From All Over The World</h1>

<div class="report-container">
    @foreach (var item in Model.CreateReport.Reverse())
    {
        <div class="report">
            <h2>@item.PetName</h2>
            @* <p><strong>Main Photo:</strong></p> *@
            <img src="@item.MainPhoto" width="400" />
            <p><strong>Pet Type and Breed:</strong> @item.PetBreed</p>
            <p><strong>Sex:</strong> @item.PetGender</p>
            <p><strong>Date of Birth:</strong> @(item.DateOfBirth?.ToShortDateString() ?? string.Empty)</p>
            <p><strong>Estimated Age:</strong> @(item.Age?? string.Empty)</p>
            <p><strong>Pet Microchip ID:</strong> @item.PetMicrochipID</p>
            <p><strong>Additional Description:</strong> @(item.AdditionalDescription ?? string.Empty)</p>
            <p><strong>General Location:</strong> @item.GenLoc</p>
            <p><strong>Last Seen Location:</strong> @item.LastSeenLocation</p>
            <p><strong>Last Seen Time:</strong> @item.LastSeenTime.Value.ToShortTimeString()</p>
            

            <p><strong>Additional Photos:</strong></p>
            <div class="photos">
                @foreach (var photo in item.ReportPhotos)
                {
                    <img src="@photo.PhotoUrl" width="200" />
                    <br/>
                    <br/>
                }
            </div>
            <h3>Contact Information:@item.ContactInformation</h3>
          @*   <p><strong>Additional Description:</strong> @item.AdditionalDescription</p>
            <p><strong>Age:</strong> @item.Age</p>
            <p><strong>Gen Loc:</strong> @item.GenLoc</p> *@
        </div>
    }
</div>

<style>
    .report-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .report {
        background-color: white;
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 1000px;
    }

    .photos {
        margin-top: 10px;
    }

        .photos img {
            margin-right: 5px;
        }
</style>
