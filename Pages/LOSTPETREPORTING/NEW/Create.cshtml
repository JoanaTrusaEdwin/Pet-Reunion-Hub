@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.RazorPages
<h1>Create</h1>

<h4>CreateReport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="CreateReport.Id" class="control-label"></label>
                <input asp-for="CreateReport.Id" class="form-control" />
                <span asp-validation-for="CreateReport.Id" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="CreateReport.PetName" class="control-label"></label>
                <input asp-for="CreateReport.PetName" class="form-control" />
                <span asp-validation-for="CreateReport.PetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateReport.PetBreed" class="control-label"></label>
                <input asp-for="CreateReport.PetBreed" class="form-control" />
                <span asp-validation-for="CreateReport.PetBreed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateReport.PetGender" class="control-label"></label>
                <input asp-for="CreateReport.PetGender" class="form-control" />
                <span asp-validation-for="CreateReport.PetGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateReport.DateOfBirth" class="control-label"></label>
                <input asp-for="CreateReport.DateOfBirth" class="form-control" />
                <span asp-validation-for="CreateReport.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateReport.PetMicrochipID" class="control-label"></label>
                <input asp-for="CreateReport.PetMicrochipID" class="form-control" />
                <span asp-validation-for="CreateReport.PetMicrochipID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateReport.LastSeenLocation" class="control-label"></label>
                <input asp-for="CreateReport.LastSeenLocation" class="form-control" />
                <span asp-validation-for="CreateReport.LastSeenLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateReport.LastSeenTime" class="control-label"></label>
                <input asp-for="CreateReport.LastSeenTime" class="form-control" />
                <span asp-validation-for="CreateReport.LastSeenTime" class="text-danger"></span>
            </div>

           @* MAIN PHOTO *@
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input type="file" name="Photo" class="form-control" onchange="previewMainPhoto(event)" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <img id="mainPhotoPreview" src="#" alt="Main Photo Preview" style="display: none; max-width: 200px;">
            </div>

          @* ADDITIONAL PHOTOS *@
            <div class="form-group photos-group">
                <label asp-for="Photos" class="control-label">Additional Photos</label>
                <input type="file" name="Photos" multiple class="form-control" onchange="previewAdditionalPhotos(event)" />
                <span asp-validation-for="Photos" class="text-danger"></span>
                <div class="additional-photos-preview"></div>
                <button type="button" class="btn btn-primary" onclick="addMorePhotos()">+</button>
            </div>

            <div class="form-group">
                <img id="additionalPhotosPreview" src="#" alt="Main Photo Preview" style="display: none; max-width: 200px;">
            </div>


            <div class="form-group">
                <label asp-for="CreateReport.ContactInformation" class="control-label"></label>
                <input asp-for="CreateReport.ContactInformation" class="form-control" />
                <span asp-validation-for="CreateReport.ContactInformation" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CreateReport.UserId" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function addMorePhotos() {
            var input = document.createElement('input');
            input.type = 'file';
            input.multiple = true;
            input.className = 'form-control';
            input.name = 'Photos';
            input.onchange = function (event) {
                previewAdditionalPhotos(event);
            };

            var photosGroup = document.querySelector('.form-group.photos-group');
            photosGroup.appendChild(input);

            var removeButton = document.createElement('button');
            removeButton.type = 'button';
            removeButton.className = 'btn btn-danger';
            removeButton.textContent = 'Remove';
            removeButton.onclick = function () {
                photosGroup.removeChild(input);
                photosGroup.removeChild(removeButton);
            };
           photosGroup.appendChild(removeButton);
        }

        function previewMainPhoto(event) {
            var input = event.target;
            var reader = new FileReader();

            reader.onload = function () {
                var mainPhotoPreview = document.getElementById('mainPhotoPreview');
                mainPhotoPreview.src = reader.result;
                mainPhotoPreview.style.display = 'block';
            };

            reader.readAsDataURL(input.files[0]);
        }

        function previewAdditionalPhotos(event) {
            var input = event.target;
            var reader;

            // Clear existing previews for this input
            var previewContainer = input.nextElementSibling;
            previewContainer.innerHTML = '';

            // Loop through each selected file
            for (var i = 0; i < input.files.length; i++) {
                reader = new FileReader();
                reader.onload = function () {
                    var img = document.createElement('img');
                    img.src = reader.result;
                    img.className = 'img-thumbnail';
                    img.style.maxWidth = '200px';

                    previewContainer.appendChild(img);
                };

                reader.readAsDataURL(input.files[i]);
            }
        }
    </script>
}
