@model Pet_Reunion_Hub.Pages.LOSTPETREPORTING.NEW.CreateModel

@{
    ViewData["Title"] = "Create";
}
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.RazorPages

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lost Pet Reporting</title>
    <style>
        body {
            /* font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; */
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            max-width: 1500px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input,
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        #submitbtn {
            background-color: black;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold; /* Make the text bold */
            font-size: 1.1em;
        }

        #tolist {
            background-color: #8b572a;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
           
            font-weight: bold;
            
        }
    </style>
</head>

<body>
<h1>Lost Pet Alert</h1>

@* <h4>CreateReport</h4> *@

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="CreateReport.Id" class="control-label"></label>
                <input asp-for="CreateReport.Id" class="form-control" />
                <span asp-validation-for="CreateReport.Id" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="CreateReport.PetName" class="control-label"><b>Pet Name</b></label>
                <input asp-for="CreateReport.PetName" class="form-control" required
                           id="pet-name-input"
                           maxlength="255"
                           oninput="handleInput('PetName', 'petNameCount', 255)" />
                    <span id="petNameCount">0/255</span> 
                <span asp-validation-for="CreateReport.PetName" class="text-danger"></span>
            </div>

            <br/>
            

            <div class="form-group">
                    <label asp-for="CreateReport.PetBreed" class="control-label"><b>Pet Type and Breed  (e.g.: Dog, Husky)</b></label>
                <input asp-for="CreateReport.PetBreed" class="form-control" required
                           maxlength="255" />
                <span asp-validation-for="CreateReport.PetBreed" class="text-danger"></span>
            </div>

                <br />
                
           @*  <div class="form-group">
                <label asp-for="CreateReport.PetGender" class="control-label"></label>
                <input asp-for="CreateReport.PetGender" class="form-control" required />
                <span asp-validation-for="CreateReport.PetGender" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                    <label asp-for="CreateReport.PetGender" class="control-label"><b>Sex</b></label>
                <select asp-for="CreateReport.PetGender" class="form-control" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="CreateReport.PetGender" class="text-danger"></span>
            </div>
                <br />
                

            <div class="form-group">
                    <label asp-for="CreateReport.DateOfBirth" class="control-label"><b>Date of Birth (leave empty if unsure)</b></label>
                <input asp-for="CreateReport.DateOfBirth" class="form-control"/>
                <span asp-validation-for="CreateReport.DateOfBirth" class="text-danger"></span>
            </div>
                <br />

                <div class="form-group">
                    <label asp-for="CreateReport.Age" class="control-label"><b>Your pet's estimated age</b></label>
                    <input asp-for="CreateReport.Age" class="form-control"
                           maxlength="50" />
                    <span asp-validation-for="CreateReport.Age" class="text-danger"></span>
                </div>
                <br />

            <div class="form-group">
                    <label asp-for="CreateReport.PetMicrochipID" class="control-label"><b>Microchip ID (if any)</b></label>
                <input asp-for="CreateReport.PetMicrochipID" class="form-control"
                           maxlength="50" />
                <span asp-validation-for="CreateReport.PetMicrochipID" class="text-danger"></span>
            </div>
                <br />

                <div class="form-group">
                    <label asp-for="CreateReport.AdditionalDescription" class="control-label"><b>Any necessary descriptions about the pet (physical appearance, behavior, unique traits)</b></label>
                    <input asp-for="CreateReport.AdditionalDescription" class="form-control"
                           maxlength="50" />
                    <span asp-validation-for="CreateReport.AdditionalDescription" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="CreateReport.GenLoc" class="control-label"><b>To notify nearby users, please provide the general location of where you found your lost pet with capital letters and folloing the format COUNTRY-STATE-CITY</b></label>
                    <input asp-for="CreateReport.GenLoc" class="form-control" required
                           maxlength="100" />
                    <span asp-validation-for="CreateReport.GenLoc" class="text-danger"></span>
                </div>
                <br />

            <div class="form-group">
                    <label asp-for="CreateReport.LastSeenLocation" class="control-label"><b>Describe where you last saw your pet.</b></label>
                <input asp-for="CreateReport.LastSeenLocation" class="form-control" required
                           maxlength="255" />
                <span asp-validation-for="CreateReport.LastSeenLocation" class="text-danger"></span>
            </div>
                <br />
                

            <div class="form-group">
                    <label asp-for="CreateReport.LastSeenTime" class="control-label"><b>When was the last time your pet was seen?</b></label>
                <input asp-for="CreateReport.LastSeenTime" class="form-control" required />
                <span asp-validation-for="CreateReport.LastSeenTime" class="text-danger"></span>
            </div>
                <br />
                

           @* MAIN PHOTO *@
            <div class="form-group">
                    <label asp-for="Photo" class="control-label"><b>To ease the community's search and identification of your pet, please include at least one photo.</b></label>
                    <input type="file" accept="image/*" name=" Photo" class="form-control" onchange="previewMainPhoto(event)" required />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <img id="mainPhotoPreview" src="#" alt="Main Photo Preview" style="display: none; max-width: 200px;">
            </div>

                <br />
                
          @* ADDITIONAL PHOTOS *@
            <div class="form-group photos-group">
                    <label asp-for="Photos" class="control-label"><b>You may upload additional photos for more accuracy.</b></label>
                    <input type="file" name="Photos" multiple class="form-control" accept="image/*" onchange="previewAdditionalPhotos(event)" />
                <span asp-validation-for="Photos" class="text-danger"></span>
                <div class="additional-photos-preview"></div>
                <button type="button" class="btn btn-primary" onclick="addMorePhotos()">+</button>
            </div>

            <div class="form-group">
                <img id="additionalPhotosPreview" src="#" alt="Main Photo Preview" style="display: none; max-width: 200px;">
            </div>

                <br />
                
            <div class="form-group">
                    <label asp-for="CreateReport.ContactInformation" class="control-label"><b>Your contact information</b></label>
                <input asp-for="CreateReport.ContactInformation" class="form-control" required
                           maxlength="255" />
                <span asp-validation-for="CreateReport.ContactInformation" class="text-danger"></span>
            </div>
                <br />
                

            <input type="hidden" asp-for="CreateReport.UserId" />


            <div class="form-group">
                <input type="submit" id="submitbtn" value="Upload" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" id="tolist">My Reports</a>
</div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

        //TO CONTROL CHARACTERS
        function updateCharacterCount(inputId, countId, limit) {
            var input = document.getElementById(inputId);
            var count = document.getElementById(countId);
            console.log("Input value:", input.value);
            console.log("Input length:", input.value.length);
            var remaining = limit - input.value.length;

            if (remaining < 0) {
                input.value = input.value.substring(0, limit);
                remaining = 0;
            }

            count.textContent = remaining + "/" + limit;
        }

        // Call this function when the input changes
        function handleInput(inputId, countId, limit) {
            updateCharacterCount(inputId, countId, limit);
        }

        //TO PREVENT NULL
        function validateForm() {
            var isValid = true;
            var unfilledFields = [];

            // Check each required input field
            var inputs = document.querySelectorAll('input[required]');
            inputs.forEach(function (input) {
                if (!input.value.trim()) {
                    isValid = false;
                    unfilledFields.push(input.name);
                }
            });

            // Display warning message if any required field is empty
            if (!isValid) {
                var message = 'Please fill in the following fields:\n';
                unfilledFields.forEach(function (field) {
                    message += '- ' + field + '\n';
                });
                alert(message);
            }

            return isValid;
        }

        //FOR ADDITIONAL PHOTOS
        function addMorePhotos() {
            var input = document.createElement('input');
            input.type = 'file';
            input.multiple = true;
            input.className = 'form-control';
            input.name = 'Photos';
            input.onchange = function (event) {
                previewAdditionalPhotos(event);
            };

            var photosGroup = document.querySelector('.form-group.photos-group');
            photosGroup.appendChild(input);

            var removeButton = document.createElement('button');
            removeButton.type = 'button';
            removeButton.className = 'btn btn-danger';
            removeButton.textContent = 'Remove';
            removeButton.onclick = function () {
                photosGroup.removeChild(input);
                photosGroup.removeChild(removeButton);
            };
           photosGroup.appendChild(removeButton);
        }

        //PREVIEWS THE MAIN PHOTO
        function previewMainPhoto(event) {
            var input = event.target;
            var reader = new FileReader();

            reader.onload = function () {
                var mainPhotoPreview = document.getElementById('mainPhotoPreview');
                mainPhotoPreview.src = reader.result;
                mainPhotoPreview.style.display = 'block';
            };

            reader.readAsDataURL(input.files[0]);
        }

        //PREVIEWS THE ADDITIONAL PHOTOS
        function previewAdditionalPhotos(event) {
            var input = event.target;
            var reader;

            // Clear existing previews for this input
            var previewContainer = input.nextElementSibling;
            previewContainer.innerHTML = '';

            // Loop through each selected file
            for (var i = 0; i < input.files.length; i++) {
                reader = new FileReader();
                reader.onload = function () {
                    var img = document.createElement('img');
                    img.src = reader.result;
                    img.className = 'img-thumbnail';
                    img.style.maxWidth = '200px';

                    previewContainer.appendChild(img);
                };

                reader.readAsDataURL(input.files[i]);
            }
        }
    </script>
}
