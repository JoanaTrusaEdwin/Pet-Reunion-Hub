<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fixed Tab with Toggle</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden; /* Prevent horizontal scrolling */
        }

        /* Styling for the fixed tab */
        .fixed-tab {
            position: fixed;
            top: 0;
            right: 0;
            background-color: #3b3b3b; /* Black */
            color: #fff;
            padding: 10px;
            width: 200px;
            transition: transform 0.3s ease; /* Add smooth transition effect */
        }

        /* Placeholder content for the page */
        .content {
            margin-right: 220px; /* Adjust the margin to accommodate the fixed tab */
            padding: 20px;
            transition: margin-right 0.3s ease; /* Add smooth transition effect */
        }
    </style>
</head>
<body>

    <!-- Fixed tab for current lost pets -->
    <div class="fixed-tab" id="fixedTab">
        <h3>Current Lost Pets</h3>
        <!-- Add dynamic content here -->
        <button onclick="hideFixedTab()">Hide Tab</button>
    </div>

    <!-- Main content of the page -->
    <div class="content">
        <h1>Your Page Content Goes Here</h1>
        <a href="#" onclick="showFixedTab()">Show Fixed Tab</a>
        <!-- Add your page content here -->
    </div>

    <script>
        function hideFixedTab() {
            document.getElementById("fixedTab").style.transform = "translateX(100%)";
            document.querySelector(".content").style.marginRight = "20px"; // Adjust margin based on tab width
        }

        function showFixedTab() {
            document.getElementById("fixedTab").style.transform = "translateX(0)";
            document.querySelector(".content").style.marginRight = "220px"; // Adjust margin to accommodate the fixed tab
        }
    </script>

</body>
</html>

