        </div>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RESOURCE.TITLE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RESOURCE.TITLE)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RESOURCE.DESCRIPTION)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RESOURCE.DESCRIPTION)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RESOURCE.LINK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RESOURCE.LINK)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RESOURCE.FILEURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RESOURCE.FILEURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RESOURCE.TYPE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RESOURCE.TYPE)
        </dd>
     @*    <dt class="col-sm-2">
