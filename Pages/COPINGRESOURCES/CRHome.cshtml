@page
@model Pet_Reunion_Hub.Pages.COPINGRESOURCES.CRHomeModel
@{
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coping Resources</title>

    <style>
        body {
           
           
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-image: url('/images/coping.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin-right: 0;
            margin-left: 0;
            padding-right: 0;
            background-attachment: fixed;
            position: relative;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly;
            max-width: 1200px;
            margin: 20px auto;
        }

        .box {
            width: 300px;
            background-color: #fff;
            padding: 20px;
            margin: 10px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            text-decoration: none; /* Remove default link styling */
            color: #333; */ /* Dark Gray */
            transition: transform 0.2s ease-in-out;
            cursor: pointer;
        }

            .box:hover {
                transform: scale(1.05);
            }

        h2 {
            color: #333;
        }

        p {
            color: #666;
        }

        .upload-box {
            width: 300px;
            background-color: #fff;
            padding: 20px;
            margin: 10px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            border: 2px dashed #ccc;
        }

        .upload-btn {
            margin-top: 10px;
            cursor: pointer;
            color: green;
            font-weight: bold;
        }

        .box-image {
          /*   max-width: 100%;
            height: auto; */
            width: 200px; /* Set the width of the image */
            height: 200px; /* Set the height of the image */
            object-fit: cover; /* Ensure the entire image is visible while maintaining aspect ratio */
            border-radius: 20px;
        }

        .button-container {
            display: flex;
            justify-content: space-between; /* Adjust as needed */
        }

        #upload {
            background-color: darkgreen;
            color: #fff;
            padding: 10px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold; /* Make the text bold */
            font-size: 1.1em;
            top: 20px; /* Adjust top position */
            left: 20px;
            width:300px;
            white-space: nowrap;
            display: inline-block; /* Allow the button to expand horizontally */
            width: auto;
        }
       
    </style>
</head>
<body>
    <h4 style="color:white;">Materials According to Category</h4>
    <p style="color:white;">Below is a list of materials categorised by their function and purpose. You can upload to share a beneficial material, and select its category later. If you offer any sort of services or products, feel free to utilise this as an advertising platform.</p>
    <div class="button-container">
       
        <a href="/COPINGRESOURCES/NEW/Index" class="box" id="upload">
            <b>Upload or view your materials</b>
        </a>
     
    </div>
    
    <div class="container">
      @*   <img class="box-image" src="/images/counseling.jpg" alt="Lost Pet Image"> *@
        <a href="/COPINGRESOURCES/Counseling" class="box">
            <h2>Counselling and Therapy</h2>
            <img class="box-image" src="/images/counseling.jpg" alt="Lost Pet Image">
            <p>Find professional help to navigate through the emotional journey of losing a pet.</p>
        </a>

        <a href="/COPINGRESOURCES/Books" class="box">
            <h2>Books About Pet Loss</h2>
            <img class="box-image" src="/images/book.jpg" alt="Lost Pet Image">
            <p>Explore literature that offers insights and support for coping with pet loss.</p>
        </a>

        <a href="/COPINGRESOURCES/YouTube" class="box">
            <h2>Online Videos From The Web</h2>
            <img class="box-image" src="/images/youtube.jpg" alt="Lost Pet Image">
            <p>Watch videos from across the web that provide guidance and comfort during difficult times.</p>
        </a>

        <a href="/COPINGRESOURCES/testimonies" class="box">
            <h2>Inspiring Experiences by Other Users</h2>
            <img class="box-image" src="/images/homespeech.jpg" alt="Lost Pet Image">
            <p>Read stories and experiences shared by others who have faced pet loss that may inspire you.</p>
        </a>

        <a href="/COPINGRESOURCES/customization" class="box">
            <h2>Customisation and Art Services</h2>
            <img class="box-image" src="/images/custom.jpg" alt="Lost Pet Image">
            <p>Discover services to personalise memorials and create lasting memories.</p>
        </a>

        <a href="/COPINGRESOURCES/others" class="box">
            <h2>Others</h2>
            <img class="box-image" src="/images/homeother.jpg" alt="Lost Pet Image">
            <p>Explore additional tools and information to cope with the loss of a beloved pet.</p>
        </a>

   
    </div>
   
</body>
</html>
